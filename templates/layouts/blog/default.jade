		meta(property='og:type', content='website')
		meta(property='og:title', content='WebVR/AR Blog by Rodin')
		meta(property='og:description', content='THE FASTEST WAY TO BUILD INTERACTIVE VR EXPERIENCES')
		meta(property='og:image', content=blog_url + 'images/banner.jpg')

